df2 <- read.csv("http://math-info.hse.ru/f/2016-17/ps-pep-quant/indicators_clust.csv")
rownames(df2) <- df2$country
data2 <- df2[, -1]
scaled_d <- scale(data2)
distances <- dist(scaled_d)
cl <- hclust(distances)
plot(cl)
kmeans_clusters <- kmeans(distances, 2)$cluster
plot(ps ~ va, col = kmeans_clusters, data = data2)
plot(ps ~ va, pch = kmeans_clusters, data = data2)
plot(ps ~ va, pch = kmeans_clusters, data = data2, lty = 2)
plot(ps ~ va, pch = kmeans_clusters, data = data2, lwd = 2)
library(ggplot2)
df2$k <- factor(kmeans_clusters)
ggplot(data = df2, aes(x = ps, y = va, fill = k)) + geom_point()
ggplot(data = df2, aes(x = ps, y = va, col = k)) + geom_point()
ggplot(data = df2, aes(x = ps, y = va, shape = k)) + geom_point()
ggplot(data = df2, aes(x = ps, y = va, shape = k)) + geom_point(size = 3)
ggplot(data = df2, aes(x = ps, y = va, shape = k)) + geom_point(size = 2)
ggplot(data = df2, aes(x = ps, y = va, shape = k)) + geom_point(size = 2) + geom_text(aes(label = country, vjust = 0, hjust = 0))
View(df2)
?abb
ggplot(data = df2, aes(x = ps, y = va, shape = k)) + geom_point(size = 2) + geom_text(aes(label = abbreviate(country), vjust = 0, hjust = 0))
ggplot(data = df2, aes(x = ps, y = va, shape = k)) + geom_point(size = 2) + geom_text(aes(label = 1:nrow(df2), vjust = 0, hjust = 0))
ggplot(data = df2, aes(x = ps, y = va, shape = k)) + geom_point(size = 2.5) + geom_text(aes(label = 1:nrow(df2), vjust = 0, hjust = 0))
